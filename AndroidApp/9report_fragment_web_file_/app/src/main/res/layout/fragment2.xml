<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/frag2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/frag2BtPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:text="이전 사진"/>
        <Button
            android:id="@+id/frag2BtNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:text="다음 사진"/>

    </LinearLayout>

    <TextView
        android:id="@+id/frag2TxtFileNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag2Layout"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/frag2TxtFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frag2Layout"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <com.example.a9report_fragment_web_file_.MyPictureView
            android:id="@+id/myPictureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>