<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_num1"
            android:layout_width="60dp"
            android:text="1"
            />
        <Button
            android:id="@+id/btn_num2"
            android:layout_width="60dp"
            android:text="2"
            />
        <Button
            android:id="@+id/btn_num3"
            android:layout_width="60dp"
            android:text="3"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btn_num4"
            android:layout_width="60dp"
            android:text="4" />
        <Button
            android:id="@+id/btn_num5"
            android:layout_width="60dp"
            android:text="5"
            />
        <Button
            android:id="@+id/btn_num6"
            android:layout_width="60dp"
            android:text="6"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btn_num7"
            android:layout_width="60dp"
            android:text="7" />
        <Button
            android:id="@+id/btn_num8"
            android:layout_width="60dp"
            android:text="8"
            />
        <Button
            android:id="@+id/btn_num9"
            android:layout_width="60dp"
            android:text="9"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:layout_width="60dp"
            android:text="#" />
        <Button
            android:id="@+id/btn_num0"
            android:layout_width="60dp"
            android:text="0"
            />

        <Button
            android:id="@+id/btn_clr"
            android:layout_width="60dp"
            android:text="*" />
    </TableRow>


    <TableRow>
        <Button
            android:id="@+id/btn_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:text="@string/btn_sum" />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:text="@string/btn_sub" />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn_mul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:text="@string/btn_mul" />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:text="@string/btn_div" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/txtview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:textSize="20sp" />
    </TableRow>

</TableLayout>