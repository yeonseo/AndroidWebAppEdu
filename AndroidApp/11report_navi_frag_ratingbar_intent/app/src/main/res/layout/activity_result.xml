                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:hint="Text"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/star2"
                    style="?android:attr/ratingBarStyleSmall"
